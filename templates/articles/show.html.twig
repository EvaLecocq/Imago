{% extends 'base.html.twig' %}

{% block title %}Imago - Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Titre</th>
				<td>{{ article.title }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ article.content }}</td>
			</tr>
			<tr>
				<th>Catégorie</th>
				<td>{{ article.category }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_articles_index') }}">Retour à la liste d'articles</a>

	<a href="{{ path('app_articles_edit', {'id': article.id}) }}">Editer</a>

	{{ include('articles/_delete_form.html.twig') }}
{% endblock %}
