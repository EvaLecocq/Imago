{% extends 'base.html.twig' %}

{% block title %}Imago - Articles
{% endblock %}

{% block main %}
	<h1>Articles</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Contenue</th>
				<th>Catégorie</th>
				<!--<th>Date de création</th>-->
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.title }}</td>
					<td>{{ article.content }}</td>
					<td>{{ article.category }}</td>

					<td>
						<a href="{{ path('app_articles_show', {'id': article.id}) }}">Ouvrir</a>
						{% if is_granted("ROLE_ADMIN")%}
							<a href="{{ path('app_articles_edit', {'id': article.id}) }}">Editer</a>
						{% endif %}

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun articles trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted("ROLE_ADMIN")%}
		<a href="{{ path('app_articles_new') }}">Ajouter un nouveau article</a>
		<a href="{{ path('app_category_new') }}">Ajouter une nouvelle Catégorie</a>

	{% endif %}
{% endblock %}
