{% extends 'base.html.twig' %}

{% block title %}Imago - Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>

	<table class="table">
		<thead>
			<tr>
				<!--<th>Id</th>-->
				<th>Titre</th>
				<th>Contenue</th>
				<th>Date de création</th>
				<!--<th>actions</th>-->
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.title }}</td>
					<td>{{ article.content }}</td>
					<td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_articles_show', {'id': article.id}) }}">Ouvrir</a>
						{% if app.admin != null and  app.admin == recipe.creator %}
						<a href="{{ path('app_articles_edit', {'id': article.id}) }}">Editer</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucun articles trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted("ROLE_ADMIN")%}
		<a href="{{ path('app_articles_new') }}">Créer un nouveau</a>
	{% endif %}
{% endblock %}
