{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<main class="content">

		<h2>Catégories</h2>

		<table class="table">
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					{% if is_granted("ROLE_ADMIN")%}
						<td>{{ include('category/_delete_form.html.twig') }}</td>
					{% endif %}
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucune catégories trouvé</td>
				</tr>
			{% endfor %}
		</table>
		<a href="{{ path('app_category_new') }}">
			Créer une nouvelle catégorie
		</a>
	<main>
{% endblock %}
