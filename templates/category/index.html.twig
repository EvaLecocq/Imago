{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block main %}

	<h1>Category index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Catégorie</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					{#<td>{{ category.id }}</td>#}
					<td>{{ category.name }}</td>
					<td>
						<a href="{{ path('app_category_show', {'id': category.id}) }}">Ouvrir</a>                        
						{#<a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>#}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucune catégories trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_category_new') }}">Créer une nouvelle catégorie</a>
{% endblock %}
